<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="442.0" prefWidth="596.0" style="-fx-background-color: orange;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javabilling.bsellercontroller">

    <children>
        <!-- TableView for displaying bestsellers -->
        <TableView fx:id="bestsellerTable" layoutX="55.0" layoutY="59.0" prefHeight="296.0" prefWidth="482.0" style="-fx-background-color: pink;">
            <columns>
                <TableColumn fx:id="colFoodName" prefWidth="238.2" text="Food Name" />
                <TableColumn fx:id="colQuantitySold" prefWidth="251.4" text="Quantity Sold" />
            </columns>
        </TableView>

        <!-- Refresh button -->
        <Button fx:id="btnRefresh" layoutX="200" layoutY="363.0" onAction="#refreshTable" prefHeight="32.0" prefWidth="170.0" text="Refresh" />
    </children>
</AnchorPane>
