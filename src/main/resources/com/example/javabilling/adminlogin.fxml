<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<Pane prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: #f3860c;"
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.javabilling.adminLoginController">

    <children>
        <!-- VBox container for centering elements -->
        <VBox alignment="CENTER" layoutX="250" layoutY="150" prefWidth="400" spacing="20" style="-fx-padding: 20;">

            <!-- Branding Image -->
            <ImageView fx:id="brandingImageView" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../../../Images/logo.jpg" />
                </image>
            </ImageView>

            <!-- Username Label and Field -->
            <Label text="Username" style="-fx-font-size: 16px; -fx-text-fill: #333333;" />
            <TextField fx:id="usernameTextField" promptText="Enter Username"
                       style="-fx-padding: 10px; -fx-background-color: #ffffff; -fx-border-color: #f3680c; -fx-border-radius: 5px;" />

            <!-- Password Label and Field -->
            <Label text="Password" style="-fx-font-size: 16px; -fx-text-fill: #333333;" />
            <PasswordField fx:id="passwordField" promptText="Enter Password"
                           style="-fx-padding: 10px; -fx-background-color: #ffffff; -fx-border-color: #f3680c; -fx-border-radius: 5px;" />

            <!-- Login Button -->
            <Button fx:id="loginButton" text="Login" prefHeight="40.0" prefWidth="200.0"
                    onAction="#loginButtonOnAction"
                    style="-fx-background-color: #ff8c42; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 5px;" />
        </VBox>
    </children>
</Pane>
